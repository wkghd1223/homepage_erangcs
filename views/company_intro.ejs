<%- include('header') -%>
<% var overviewList = JSON.parse(overview) %>
<% var historyList = JSON.parse(history) %>
<% var titlesList = JSON.parse(titles) %>

<section id="overview-section" class="site-section" data-aos="fade" style="padding: 0%;">
  <div class="container">
    <div class="row container jsutify-content-center mb-5">
      <h2 style ="margin-bottom: 0rem;"><%= titlesList[0] %></h2>
    </div>
    <div class="row jsutify-content-center mb-5 text-center">
      <div class="col-md-12 mlg-4 col">
        <table style="color: black; font-size: 1rem;" class="table table-bordered">
          <tbody>
            <% for(var i =0; i < overviewList.length; i++) {%>
            <tr>
              <th scope="col"><%=overviewList[i].title%></th>
              <td><%= overviewList[i].content %> </td>
            </tr>
            <%}%>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>

