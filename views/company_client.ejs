<%- include('header') -%>
<% var cardList = JSON.parse(card) %>

<% for (var i=0; i<cardList.length; i++){ %>
<section>
  <div class="container">
    <h2 style="margin-bottom: 2%; margin-top: 2%;">
      <%= cardList[i].managing_type %>
    </h2>
    <div class="accordion" id="Section<%=i%>">
      <% for (var j=0; j<cardList[i].content.length; j++){ %>
        <div class="card">
          <div class="card-header h5">
            <%= cardList[i].content[j].subtitle%>
          </div>
          <div class="card-body">
            <ul class="list-group">
              <li class="list-group-item">
                <div class="row row-cols-1 row-cols-md-3 justify-content-betwwen">
                  <% for (var k=0; k<cardList[i].content[j].subcontent.length; k++){ %>
                    <!-- 카드 안 카드 -->
                    <div class="card col-sm-11 col-md-6 col-lg-4 col-xl-4">
                      <div class="row no-gutters">
                        <!-- 이미지 부분 -->
                        <div class="col-4 col-sm-3 col-md-4 col-lg-4">
                          <img src="../images/client/<%= cardList[i].content[j].subcontent[k].src%>" class="card-img" alt="..."
                          style="width: 100%;">
                        </div>
                        <!-- 이미지 옆 내용 -->
                        <div class="col-8 col-sm-9 col-md-8 col-lg-8">
                          <div class="card-body">
                            <!-- 고객명 : 오렌지듄스CC -->
                            <p class="card-text"><%= cardList[i].name_title %>:
                            <%= cardList[i].content[j].subcontent[k].name %></p>
                            <% if(cardList[i].content[j].subcontent[k].size_title == "연면적"){ %>
                            <p class="card-text"><%= cardList[i].content[j].subcontent[k].size_title %>:
                            <%= cardList[i].content[j].subcontent[k].size %>m<sup>2</sup></p>
                            <%} else{%>
                            <p class="card-text"><%= cardList[i].content[j].subcontent[k].size_title %>:
                            <%= cardList[i].content[j].subcontent[k].size %></p>
                            <%}%>
                            <p class="card-text"><%= cardList[i].range_title %>:
                            <%= cardList[i].content[j].subcontent[k].range %></p>
                          </div>
                        </div>
                      </div>
                    </div>
                  <%}%>
                </div>
              </li>
            </ul>
          </div>
        </div>
      <%}%>
    </div>
  </div>
</section>
<%}%>
<%- include('footer') -%>