<%- include('header') -%>
<% var historyList = JSON.parse(history) %>
<% var summaryList = JSON.parse(summary) %>


<div class="site-blocks-cover overlay" style="background-image: url(images/main.png);" data-aos="fade"
  data-aos-delay="200" data-stellar-background-ratio="0.5">
  <div class="container">
    <div class="row align-items-center justify-content-center text-center">
      <div class="col-md-12" data-aos="fade-up" data-aos-delay="200">
        <div class="row justify-content-center mb-4">
            <strong>
              <h1 style="color: whitesmoke;"><%= welcome %></h1>
            </strong>
        </div>
      </div>
    </div>
  </div>
</div>

<section id="history-section" class="site-section space" data-aos="fade-up" >
  <div class="container">
    <div style="padding-top: 3rem;" class="row jsutify-content-center mb-5 text-center">
      <div class="col-md-6">
        <table class="table table-bordered">
          <tbody>
            <% for(var i =0; i < historyList.length; i++) {%>
            <tr>
              <th><%= historyList[i].year %> </th>
              <td><%= historyList[i].content %> </td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
      <div class="col-md-6 space">
        <img src="images/chart.png" alt="chart" style="width: 80%;">
      </div>
    </div>
  </div>
</section>

<section id="summary-section" class="site-section space">
  <div class="container">
    <h2 style="padding:2rem; text-align: center;"><%= service %></h2>
    <div class="row">
      <% for(var i=0; i<summaryList.length; i++){%>
      <div class="sm-space col-6 col-sm-6 col-md-3 col-lg-3">
        <div class="card" data-aos="fade-up" >
          <img src="images/<%= summaryList[i].src %>" class="card-img-top" alt="<%= summaryList[i].title %>">
          <div class="card-body text-center">
            <h5 class="sm-space card-title"><%= summaryList[i].title %></h5>
            <p class="card-text card-content"><%= summaryList[i].description %></p>
          </div>
        </div>
      </div>
      <%}%>
  </div></div>
  
</section>

  <%- include('footer') -%>