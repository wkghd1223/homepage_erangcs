<%- include('header') -%>
<% var historyList = JSON.parse(history) %>
<% var summaryList = JSON.parse(summary) %>


<div class="site-blocks-cover overlay" style="background-image: url(images/main.png);" data-aos="fade"
  data-aos-delay="200" data-stellar-background-ratio="0.5">
  <div class="container">
    <div class="row align-items-center justify-content-center text-center">
      <div class="col-md-12" data-aos="fade-up" data-aos-delay="200">
        <div class="row justify-content-center mb-4">
          <div class="col-md-8 text-center">
            <strong>
              <h1 style="color: whitesmoke; font-size: 2rem;"><%= welcome %> </h1>
            </strong>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container" style="height: 3rem;"></div>

<section id="history-section" class="site-section" data-aos="fade" style="padding: 0%;">
  <hr class="one" color="gray">
  <div class="container">
    <div style="padding-top: 3rem;" class="row jsutify-content-center mb-5 text-center">
      <div class="col-sm">
        <table style="color: black; font-size: 1rem;" class="table">
          <% for(var i =0; i < historyList.length; i++) {%>
          <tbody>
            <td><%= historyList[i].year %> </td>
            <td><%= historyList[i].content %> </td>
          </tbody>
          <% } %>
        </table>
      </div>
      <div class="col-sm">
        <img src="images/chart.png" alt="chart"  style="width: 100%;">
      </div>
    </div>
  </div>
</section>

<section id="summary-section" class="site-section" data-aos="fade" style="padding-top: 0%;">
  <hr class="one" color="gray">
  <div class="container">
    <div class="text-center" style="margin-bottom: 4rem;">
      <h2 style="padding-top: 1rem">주요서비스</h2>
    </div>
  </div>
  <div class="container">
    <ul>
      <% for(var i=0; i<summaryList.length;i++){ %>
      <li>
        <h4><%= summaryList[i].title %> </h4>
        <p style="padding-bottom: 1rem;"><%= summaryList[i].description %> </p>
      </li>
      <% } %>
    </ul>
  </div>

  <%- include('footer') -%>