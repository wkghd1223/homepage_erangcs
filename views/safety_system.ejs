<%- include('header') -%>
<% var item = JSON.parse(card); %>

<section id="section-introduce">
  <div class="container">
    <h2><%= item.title  %> </h2>
    <% for(var i =0; i<item.content.length; i++){ %>
    <div class="row">
      <!-- smart현장관리 -->
      <div class="card col-xs-12 col-md-5">
        <div class="container row">
          <h3>
            <%= item.content[i].title %> 
          </h3>
        </div>
        <div class="row">
          <!-- 이미지 -->
          <div class="col-xs-12 col-md-6">
            <img src="../images/safety/<%= item.content[i].src %>" alt="1" style="width: 100%;">
          </div>
          <!-- 리스트 -->
          <div class="container col-xs-12 col-md-6">
            <ul class="list-unstyled">
              <% for(var j =0; j<item.content[i].list.length; j++){ %>
                <li><%= item.content[i].list[j] %> </li>
                <% } %>
              </ul>
          </div>
        </div>
      </div>
      <!-- 오른쪽 리스트 -->
      <div class="card col-xs-12 col-md-7">
        <div class="row">
          <% for(var j =0; j<item.content[i].img_list.length; j++){ %>
            <div class="container col-xs-6 col-md-3">
              <div class="row">
                <h5><%= item.content[i].img_list[j].title %></h5> 
              </div>
              <div class="row">
            <img src="../images/safety/<%= item.content[i].img_list[j].src %>" alt="123" style="width: 100%;">
             
              </div>
            </div>  
          <% } %>
        </div>
      </div>
    </div>
    <% } %>
  </div>
</section>

<%- include('footer') -%>