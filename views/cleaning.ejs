<%- include('header') -%>
<% var cleaningIntro = JSON.parse(cleaning) %>
<% var cardList = JSON.parse(card) %>

<section id="section-introduce">
	<div class="container space">
	  <h3 class="font-weight-bold"><%= cleaning_title %></h3>
	  <p> <%= cleaning_info %> </p>
	  <div class="row mb-5 justify-content-around">
		<div class="card">
		  <div class="row">
			<div class="col-xs-12 col-md-2" style="margin-top:14px;">
			  <div class="row justify-content-around">
				<img src="/images/<%=cleaningIntro.src%>" alt="준공청소" style="width: 70%;">
			  </div>
			  <div class="row justify-content-around">
				<h5 class="card-title font-weight-bold">
				  <%= cleaningIntro.name %>
				</h5>
			  </div>
			</div>

			<div class="col-xs-12 col-md-10 text-center">
			  <div class="row" style="margin-top:10px; margin-bottom:10px;">
				<% for (var j=0;j<cleaningIntro.sub.length;j++){%>
				<div class="col-xs-12 col-md-6 col-lg-3">
				  <div class="card" style="margin-top:4px; margin-bottom:4px;">
					<strong><b>
						<div class="card-title text-info">
						  <%=cleaningIntro.sub[j].title%>
						</div>
						<p>
					  </b></strong>
					<%=cleaningIntro.sub[j].descript%>
					</p>
				  </div>
				</div>
				<%}%>
						  
					  </div>
				  </div>
			  </div>
		  </div>
	  </div>
</section>

<section id="section-safety-client">
  <div class="container space">
	<h2>준공청소 현황</h2>
	  <% for(var i=0; i< cardList.length;i++){%>
				<section class="space">
				  <div>
					<h3 class="text-info font-weight-bold">
					  <svg class="bi bi-pentagon" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor"
						xmlns="http://www.w3.org/2000/svg">
						<path fill-rule="evenodd"
						  d="M8 1.288l-6.842 5.56L3.733 15h8.534l2.575-8.153L8 1.288zM16 6.5L8 0 0 6.5 3 16h10l3-9.5z"
						  clip-rule="evenodd" />
					  </svg>
					  <%= cardList[i].title %>
					</h3>
				  </div>
				  <table class="table table-bordered text-center" style="width: 100%;">
					<thead>
					  <tr style="background-color: ivory;">
						<th scope="col" style="width: 30%;">
						  관리분야
						</th>
						<th scope="col" style="width: 70%;">
						  관리내용
						</th>
					  </tr>
					</thead>
					<%for(var j=0; j<cardList[i].content.length;j++){%>
					<tbody>
					  <td>
						<%= cardList[i].content[j].type%>
					  </td>
					  <td>
						<%= cardList[i].content[j]._desc%>
					  </td>
					</tbody>
				  </table>
				</section>
				<%}%>

		
		<div>
		  <table class="table table-bordered card-body">
			<%for(var j=0; j<cardList[i].client_info.length;j++){%>
				<tbody>
				  <td class="cleaning-gradient">
					<%= cardList[i].client_info[j].name%>
				  </td>
				  <td class="my-cell">
					<%= cardList[i].client_info[j].address%>
				  </td>
				  <td class="my-cell text-center">
					<%= cardList[i].client_info[j].type%>
				  </td>
				</tbody>
				<%}%>
				</table>
		</div>
	<%}%>
			  </div>
  </section>



<%- include('footer') -%>